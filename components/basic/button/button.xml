<component>
	<previews>
		<!-- To see the panel on both with light and dark theme -->
		<preview style_bg_color="0x888" />
	</previews>

	<api>
		<prop name="tag" type="string" default=" " />
		<prop name="button_type" type="int" default="0" />
	</api>

	<styles>
		<style name="style_button_invisible" bg_color="0x131313" border_side="none" bg_opa="0" />
		<style name="style_button_pri" bg_color="0x0a64a8" border_side="none" bg_opa="255" />
		<style
			name="style_button"
			bg_color="0x131313"
			border_side="full"
			border_width="1"
			border_color="0x020202"
			shadow_width="0"
			bg_opa="255"
			height="content"
			width="content"
			radius="4px"
			pad_all="8px"
		/>
		<style name="style_button_activ" bg_opa="127" />
	</styles>

	<view extends="lv_button">
		<label tag="$tag" />
		<style name="style_button_activ" selector="pressed" />
		<style name="style_button" />
		<bind_style name="style_button_pri" subject="button_pri" ref_value="$button_type" />
		<bind_style name="style_button_invisible" subject="button_invis" ref_value="$button_type" />
	</view>
</component>
