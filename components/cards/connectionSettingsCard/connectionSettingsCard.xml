<component>
	<previews>
		<!-- To see the panel on both with light and dark theme -->
		<preview style_bg_color="0x888" />
	</previews>
	<styles>
		<style name="style_main" width="content" height="content" />
	</styles>
	<view>
		<remove_style />
		<style name="style_main" />
		<card>
			<row>
				<lv_label translation_tag="connection_settings" />
			</row>
			<row width="100%" style_flex_main_place="start">
				<lv_checkbox text="Bluetooth" bind_checked="bluetooth_on" />
			</row>

			<row width="100%" style_flex_main_place="start">
				<lv_checkbox text="NFC" bind_checked="nfc_on" />
			</row>

			<row width="100%" style_flex_main_place="start">
				<lv_checkbox text="WiFi" bind_checked="wifi_on" />
			</row>
		</card>
	</view>
</component>
