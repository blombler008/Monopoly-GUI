<component>
	<previews>
		<!-- To see the panel on both with light and dark theme -->
		<preview style_bg_color="0x888" />
	</previews>

	<styles>
		<style name="pg" 
			bg_color="#bg_tertiary_dark" 
			layout="flex" 
			bg_opa="255"  
			height="content" 
			width="content" 
			flex_flow="row" 
			margin_all="8" 
			pad_all="8"
			radius="5"
		/>
	</styles>

	<api>
		<prop name="subject" default="player_count" type="subject" />
		<prop name="max" default="8" type="int" />
		<prop name="min" default="2" type="int" />
		<prop name="digit_count" default="1" type="int" />
	</api>

	<view> 
		<remove_style_all  />
		<style name="pg" />
 
		<button tag=" +" width="37px" height="37px" style_margin_right="8">
			<subject_increment_event step="1" subject="$subject" rollover="true" max_value="$max" min_value="$min" />
		</button>
		<lv_spinbox
			digit_count="$digit_count"
			width="37px"
			height="37px"
			max_value="$max"
			min_value="$min"
			rollover="true"
			bind_value="$subject"
		>
			<remove_style selector="cursor" />
		</lv_spinbox>
		<button tag="  -" width="37px" height="37px" style_margin_left="8">
			<subject_increment_event step="-1" subject="$subject" rollover="true" max_value="$max" min_value="$min" />
		</button>

	</view>
</component>
